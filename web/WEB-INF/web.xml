<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login?carro=*</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>CatalogueServlet</servlet-name>
        <servlet-class>servlets.CatalogueServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CatalogueServlet</servlet-name>
        <url-pattern>/catalogue</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>RegisterCarServlet</servlet-name>
        <servlet-class>servlets.RegisterCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterCarServlet</servlet-name>
        <url-pattern>/registerCar</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>servlets.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CarDetailServlet</servlet-name>
        <servlet-class>servlets.CarDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarDetailServlet</servlet-name>
        <url-pattern>/carDetail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/userProfile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllUserCarsServlet</servlet-name>
        <servlet-class>servlets.AllUserCarsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllUserCarsServlet</servlet-name>
        <url-pattern>/userCars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteProfileServlet</servlet-name>
        <servlet-class>servlets.DeleteProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProfileServlet</servlet-name>
        <url-pattern>/deleteProfile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <servlet-class>servlets.UpdateProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <url-pattern>/updateProfile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCarServlet</servlet-name>
        <servlet-class>servlets.DeleteCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCarServlet</servlet-name>
        <url-pattern>/deleteCar</url-pattern>
    </servlet-mapping>
</web-app>